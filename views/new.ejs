<%- include("partials/header.ejs") %>

<div class="ui main container segment">
    <h1 class="ui center aligned header">New Post</h1>
    <form class="ui form" action="/blogs" method="post">
    <div class="field">
        <label>Title</label>
        <input type="text" name="blog[title]" placeholder="Title" required>
    </div> 
    <div class="field">
        <label>Image URL</label>
        <input type="text" name="blog[image]" placeholder="image url" required>
    </div>
    <div class="field">
        <label> Content </label>
        <textarea name="blog[body]" id="" cols="30" rows="10" required></textarea>
        <!-- <input type="text" name="blog[body]" placeholder="body goes here..."> -->
    </div>
    <div class="field">
        <input class="ui violet big basic button" type="submit">
    </div>
    </form>
</div>

