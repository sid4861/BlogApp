<%- include("partials/header.ejs") %>

<div class="ui main container segment">
    <h1 class="ui center aligned header"><%= foundBlog.title %></h1>
    <div class="ui top attached">

        <div class="item">

            <img class="ui centered rounded image" src="<%=foundBlog.image%>" alt="">

            <div class="content">
                <span><%=foundBlog.createdDate.toDateString() %></span>
            </div>
            <div class="description">
                <p><%- foundBlog.body %></p>
            </div>

            <a class = "ui basic orange button" href="/blogs/<%= foundBlog._id %>/edit">Edit</a>

            <form id="delete" action="/blogs/<%= foundBlog._id %>?_method=DELETE" method="POST">
                <button class="ui red basic button">Delete</button>
            </form>

        </div>

    </div>

</div>

<%- include("partials/footer.ejs") %>