<%- include("partials/header.ejs") %>

<div class="ui main container segment">
    <h1 class="ui center aligned header">Edit <%= foundBlog.title%></h1>
    <form class="ui form" action="/blogs/<%= foundBlog._id %>?_method=PUT" method="post">
    <div class="field">
        <label>Title</label>
        <input type="text" name="blog[title]" value= <%= foundBlog.title%> >
    </div> 
    <div class="field">
        <label>Image URL</label>
        <input type="text" name="blog[image]" value= <%= foundBlog.image %>>
    </div>
    <div class="field">
        <label> Content </label>
        <textarea name="blog[body]" id="" cols="30" rows="10" required><%= foundBlog.body %></textarea>
        <!-- <input type="text" name="blog[body]" placeholder="body goes here..."> -->
    </div>
    <div class="field">
        <input class="ui violet big basic button" type="submit">
    </div>
    </form>
</div>

<%- include("partials/footer.ejs") %>